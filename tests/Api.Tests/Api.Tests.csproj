    <AssemblyName>AuthorizationManagement.Api.Tests</AssemblyName>
    <RootNamespace>AuthorizationManagement.Api.Tests</RootNamespace>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
